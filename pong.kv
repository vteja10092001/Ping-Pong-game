<PongBall>:
    size:50,50
    canvas:
        Ellipse:
            pos: self.pos
            size:self.size


<Paddle>:
    size:25,200
    canvas:
        Rectangle:
            size:self.size
            pos:self.pos


<PongGame>:
    ball: Pong_Ball
    player1:player_left
    player2:player_right
    canvas:
        Rectangle:
            pos: self.center_x-5,0
            size:10,self.height

    Label:
        font_size:70
        center_x: root.width/4
        top:root.top-50
        text:str(root.player1.score)

    Label:
        font_size:70
        center_x: root.width*3/4
        top:root.top-50
        text:str(root.player2.score)

    PongBall:
        id:Pong_Ball
        center : root.center
    Paddle:
        id :player_left
        x:root.x
        center_y:root.center_y

    Paddle:
        id :player_right
        x:root.width-self.width
        center_y:root.center_y